<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBF5F5"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1EFF9800"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp">
    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginStart="20dp"
        android:background="#00EDE7E7"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="40sp"
        android:contentDescription="My Image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food App"
            android:textSize="60sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:fontFamily="cursive"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="40sp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="LOGIN"
            android:layout_gravity="center"
            android:background="@drawable/btngradint"
            android:textColor="#FBDE19"
            android:textSize="10sp"
            tools:ignore="InvalidId" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="REGISTER"
            android:background="@drawable/btngradint"
            android:layout_gravity="center"
            android:textColor="#FBDE19"
            android:textSize="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#0D0D0C"/>







    </LinearLayout>





</RelativeLayout>